<Page
    x:Class="OMDBApiMobileAppsProject.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:OMDBApiMobileAppsProject"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="Red">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button x:Name="SearchMovies" x:Uid="btnSearchMov" Grid.Row="1" Background="Gray" FontSize="40" FontFamily="arial"  VerticalAlignment="Center" HorizontalAlignment="Center" Click="SearchMovies_Click">Search Movies</Button>
            <Button x:Name="MyMovies" x:Uid="btnMov" Grid.Row="1" Background="Gray" FontSize="40" FontFamily="arial"  VerticalAlignment="Center" HorizontalAlignment="Center" Click="MyMovies_Click">My Movies</Button>
        </StackPanel>
    </Grid>
</Page>
